{
    "manifest_version": 2,
    "name": "Currency exchange calculator",
    "description": "Get exchange calculation right after you select element with currency",
    "version": "1.0",
    "permissions": [
	"tabs","activeTab"
    ],
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["content.js"],
        "run_at": "document_idle",
        "all_frames": true
    }]
}
